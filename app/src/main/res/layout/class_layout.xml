<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >
        <ImageView
            android:id="@+id/classImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="4dp">
            <ImageView
                android:id="@+id/settingRoll"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_settings_black_24dp"
                android:visibility="gone"
                android:background="@drawable/cardview_add_post"
                android:padding="2dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:padding="6dp"
            android:orientation="vertical"
            android:background="@drawable/profile_gradient">

            <TextView
                android:id="@+id/className"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="28dp"
                android:layout_marginStart="10dp"
                android:text="ClassName"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/totalAtt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/className"
                android:text="Total Attendance"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/takeAtt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/className"
                android:layout_marginEnd="12dp"
                android:background="@drawable/cardview_add_post"
                android:src="@drawable/ic_delete_black_24dp"
                android:padding="8dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>